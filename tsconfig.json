{
    "compilerOptions": {
      "outDir":"./dist",
      "rootDir": "./src", 
      "target": "ES5",
      "module": "commonjs",                           
      "lib": ["es6"],
      "allowJs": true,  
      "strict": true,      
      "resolveJsonModule":true ,                         
      "esModuleInterop": true,
      "strictNullChecks": false,   
      "removeComments": true,
      "skipLibCheck": true,
      "diagnostics": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
    },
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "include": ["src/**/*"]
}